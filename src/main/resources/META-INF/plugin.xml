<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin version="2" url="http://github.com/vsch/idea-multimarkdown">
  <id>com.vladsch.idea.multimarkdown</id>
  <name>MultiMarkdown</name>
  <category>Custom Languages</category>
  <vendor url="http://github.com/vsch" email="vladimir.schneider@gmail.com">Vladimir Schneider</vendor>
  <version>1.0.4</version>
  <idea-version since-build="134.549"/>
  <depends>com.intellij.modules.lang</depends>
  <description>
    <![CDATA[
      <b><a href="http://daringfireball.net/projects/markdown">Markdown</a> language support for IntelliJ platform.</b>
    ]]>
  </description>
  <change-notes>
    <![CDATA[
    <p>
      <b>1.0.4</b><br/>
    <ul>
      <li>: Change generated HTML to use span instead of del for strikethrough to control the look through CSS</li>
      <li>: Change max img width of 0 disables resizing</li>
    </ul>
    <b>1.0.3</b><br/>
    <ul>
      <li>: Change generated HTML to use div instead of hr to control the look through CSS</li>
      <li>: Tweak document icon</li>
    </ul>
    <b>1.0.2</b><br/>
    <ul>
      <li>: Change document icon</li>
      <li>: Fix use Application invokeLater, instead of SwingUtil</li>
    </ul>
    <b>1.0.1</b><br/>
    <ul>
      <li>: Fork source into its own plug-in: MultiMarkdown</li>
      <li>: Add settings for update delay, img max-width</li>
      <li>: Add custom Css text area in settings and also ability to use defaults and load defaults for editing</li>
    </ul>
    <b>1.0.0</b><br/>
    <ul>
      <li>: Limit images to 1000 pixels wide, resize if larger</li>
      <li>: Fix table to be striped</li>
    </ul>
    <b>0.9.8</b><br/>
    <ul>
      <li>: Fix no refresh on settings change</li>
      <li>: Update pegdown to 1.5.0 and parboiled to 1.1.7.</li>
    </ul>
    <b>0.9.7</b><br/>
    <ul>
      <li>Forked from <a href="https://github.com/nicoulaj/idea-markdown">idea-markdown</a></li>
    </ul>
    </p>
    ]]>
  </change-notes>
  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="com.vladsch.idea.multimarkdown.file.MarkdownFileTypeFactory"/>
    <syntaxHighlighter key="Markdown" implementationClass="com.vladsch.idea.multimarkdown.highlighter.MarkdownSyntaxHighlighter"/>
    <colorSettingsPage implementation="com.vladsch.idea.multimarkdown.highlighter.MarkdownColorSettingsPage"/>
    <additionalTextAttributes scheme="Default" file="com/vladsch/idea/multimarkdown/schemes/default.xml"/>
    <additionalTextAttributes scheme="Darcula" file="com/vladsch/idea/multimarkdown/schemes/darcula.xml"/>
    <fileEditorProvider implementation="com.vladsch.idea.multimarkdown.editor.MarkdownPreviewEditorProvider"/>
    <lang.documentationProvider language="Markdown" implementationClass="com.vladsch.idea.multimarkdown.documentation.MarkdownDocumentationProvider"/>
    <lang.parserDefinition language="Markdown" implementationClass="com.vladsch.idea.multimarkdown.lang.parser.MarkdownParserDefinition"/>
    <externalAnnotator language="Markdown" implementationClass="com.vladsch.idea.multimarkdown.annotator.MarkdownAnnotator"/>
    <spellchecker.support language="Markdown" implementationClass="com.vladsch.idea.multimarkdown.spellchecking.MarkdownSpellcheckingStrategy"/>
    <todoIndexer filetype="Markdown" implementationClass="com.vladsch.idea.multimarkdown.todo.MarkdownTodoIndexer"/>
    <applicationService serviceInterface="com.vladsch.idea.multimarkdown.settings.MarkdownGlobalSettings" serviceImplementation="com.vladsch.idea.multimarkdown.settings.MarkdownGlobalSettings"/>
    <applicationConfigurable instance="com.vladsch.idea.multimarkdown.settings.MarkdownGlobalSettingsConfigurable"/>
  </extensions>
</idea-plugin>
